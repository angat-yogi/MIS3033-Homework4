<Window x:Class="problem3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:problem3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnPlayPause" Content="Play" HorizontalAlignment="Left" Margin="360,327,0,0" VerticalAlignment="Top" Width="40" Click="btnPlayPause_Click"/>
        <MediaElement x:Name="videoframe" HorizontalAlignment="Left" Height="254" Margin="200,64,0,0" VerticalAlignment="Top" Width="425" IsEnabled="False" UnloadedBehavior="Manual"/>
        <Button x:Name="Get_Random_Video" Content="Get Random Video" HorizontalAlignment="Left" Margin="53,83,0,0" VerticalAlignment="Top" Height="29" Width="126" Click="Get_Random_Video_Click"/>
        <Button x:Name="btnStop" Content="Stop" HorizontalAlignment="Left" Margin="420,327,0,0" VerticalAlignment="Top" Click="btnStop_Click" RenderTransformOrigin="-0.057,1.112"/>
        <Button x:Name="btnNext" Content="Next" HorizontalAlignment="Left" Margin="469,327,0,0" VerticalAlignment="Top" Click="btnNext_Click"/>

    </Grid>
</Window>
